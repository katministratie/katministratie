@using Blazorise.SpinKit
@using Superkatten.Katministratie.Host.Entities

@if(Gastgezin is null)
{
    <Div Position="Position.Absolute.Top.Is50.Start.Is50.Translate.Middle">
        <SpinKit Type="SpinKitType.Chase" Size="40px"/>
    </Div>
    return;
}

<Row Border="Border.Is1" Margin="Margin.Is1">
    <Column ColumnSize="ColumnSize.Is1.OnDesktop.Is3.OnMobile">
        <span class="material-icons" style="font-size:100px;">group</span>
    </Column>
    <Column ColumnSize="ColumnSize.Is11.OnDesktop.Is9.OnMobile">
        @if (_editMode == HostFamilyComponentEditMode.DisplayDetailsOnly)
        {
            <Button Color="Color.Primary" Clicked="@OnEdit"><span class="material-icons">edit</span>Edit</Button>
            <Button Color="Color.Primary" Clicked="@OnDelete"><span class="material-icons">delete</span>DELETE</Button>
            <Button Color="Color.Primary" Clicked="@OnAssignSuperkat"><span class="material-icons">pets</span>PETS</Button>
        }

        @switch(_editMode)
        {
            case HostFamilyComponentEditMode.DisplayDetailsOnly:
                <GastgezinDetailsComponent Gastgezin="@Gastgezin" />
                break;

            case HostFamilyComponentEditMode.EditGastgezinNaw:
                <GastgezinEditComponent Gastgezin="@Gastgezin" OnFinish="@OnFinishEdit" />
                break;
        }
    </Column>
</Row>
