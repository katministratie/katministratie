@using Superkatten.Katministratie.Host.Services
@using Superkatten.Katministratie.Host.Entities;

@if (Gastgezin is null)
{
<div class="container">
    ...
</div>    
}

<div class="container">
    <Button OnClick="@OnClose">Close</Button>

    <Row>
        <p>Hieruit kan je selecteren</p>
        <Col Class="col-12">
            
            @foreach(var superkat in AvailableSuperkatten)
            {
                <Button OnClick="() => { AddSuperkatToSelection(superkat); }">@superkat.DisplayableNumber</Button>
            }
        </Col>
    </Row>
    
    <Divider />
    
    <p>Geselecteerde katten</p>
    <Row>
        <Col Class="col-12">
            
            @foreach(var superkat in Gastgezin!.Superkatten)
            {
                <Button Class="btn btn-primary" OnClick="() => RemoveSuperkatFromSelection(superkat)">@superkat.DisplayableNumber</Button>
            }

        </Col>
    </Row>
</div>
