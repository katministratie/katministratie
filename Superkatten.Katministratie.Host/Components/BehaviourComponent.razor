@using Superkatten.Katministratie.Contract.Entities;

<Image Src="@BehaviourIconName" Alt="@TooltipText" Preview="false" />

@code {
    [ParameterAttribute]
    public CatBehaviour Behaviour{ get; set; }

    public string TooltipText
    {
        get
        {
            switch (Behaviour)
            {
                case CatBehaviour.Unknown: return "Pas op gedrag niet bekend";
                case CatBehaviour.Shy: return "Pas op dit is een schuwe kat";
                case CatBehaviour.Social: return "Deze kan je aaien";
                default: return "Pas op gedrag niet bekend";
            }
        }
    }

    public string BehaviourIconName
    {
        get
        {
            switch (Behaviour)
            {
                case CatBehaviour.Unknown: return "./Images/Behaviour/Onbekend.jpg";
                case CatBehaviour.Shy: return "./Images/Behaviour/Schuw.jpg";
                case CatBehaviour.Social: return "./Images/Behaviour/Sociaal.jpg";
                default: return "./Images/Behaviour/Error.jpg";
            }
        }
    }

}
