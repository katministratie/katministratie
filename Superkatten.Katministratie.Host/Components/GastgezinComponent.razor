@using Superkatten.Katministratie.Application.Entities
@using Superkatten.Katministratie.Host.Services

@inject NavigationManager _navigationManager
@inject IGastgezinService _gastgezinService

<Row Class="mb-2 border">
    <Col class="col-xl-1 col-lg-1 col-md-3 col-4 align-content-center">
        <Image Width="100px" Src=".\images\superkat.jpg" />
    </Col>
    <Col class="col-xl-11 col-lg-11 col-md-9 col-8">
        <h5 class="p-1 bg-black text-white"><span class="material-icons">face</span></h5>
        <div class="mb-2">
            <div>@Gastgezin.Name</div>
            <div>@Gastgezin.Address"</div>
            <div>@Gastgezin.City</div>
            <div>@Gastgezin.Phone"></div>
        </div>
        <div class="mb-0 pt-1">
            <Button OnClick="@OnEdit"></Button>
            <Button OnClick="@OnDelete"></Button>
            <Button OnClick="@OnDelete"></Button>
        </div>
    </Col>
</Row>


@code {
    [Parameter]
    public Gastgezin Gastgezin { get; set; }

    public void OnAdd()
    {
        _navigationManager.NavigateTo("CreateGastgezin");
    }

    public void OnDelete()
    {
        _gastgezinService.DeleteGastgezinAsync(Gastgezin.Id);
    }

    public void OnEdit()
    {
        _navigationManager.NavigateTo("EditGastgezin");
    }
}
