@page "/CreateSuperkat"

@using Superkatten.Katministratie.Host.Api
@using Superkatten.Katministratie.Host.Entities
@using Superkatten.Katministratie.Host.Services
@using Superkatten.Katministratie.Contract.Entities

@inject NavigationManager NavigationManager
@inject ISuperkattenListService _superkattenService
@inject MessageService _message
@inject NotificationService _notice

<PageTitle>Nieuwe superkat</PageTitle>

<Row Class="border mb-2">
    <Col Class="col-4">
        <Button Block="@true" Disabled="@ValidCatchLocation" OnClick="@OnOk">Ok</Button>
    </Col>
    <Col Class="col-4">
        
    </Col>
    <Col Class="col-4">
        <Button Block="@true" OnClick="@OnCancel">Terug</Button>
    </Col>
</Row>

<Divider />

<Row Class="mb-2">
    <Col Class="col-12">
        <Input Placeholder="vanglokatie" @bind-Value="@CatchLocation" />
    </Col>
</Row>

<Row Class="mb-2">
    <Col Class="col-12">
        Vangdatum: 
        <DatePicker
            Bordered="@false" 
            TValue="DateTime?" 
            Picker="@DatePickerType.Date" 
            OnChange="OnChangeCatchDate" 
            DefaultValue="@DateTime.UtcNow" />
    </Col>
</Row>

<Row>
    <Col Class="col-12">        
        Hok:<AntDesign.InputNumber 
                Min="1"
                Max="@MAX_HOKNUMBER_ALLOWED"
                DefaultValue="1" 
                @bind-Value="@CageNumber"/>
    </Col>
</Row>


<Row Class="mb-2">
    <Col Class="col-12">
        Stronghold: 
        <Checkbox @bind-Checked="@StrongHoldGiven">
            @($"{(StrongHoldGiven ? "Stronghold gegeven" : "Geen stronghold gegeven")}")
        </Checkbox>
    </Col>
</Row>

<Row Class="mb-2">
    <Col Class="col-12">
        Retour:
        <Checkbox @bind-Checked="@Retour">
            @($"{(Retour ? "Kat gaat retour" : "Kat gaat adoptieproces in")}")
        </Checkbox>
    </Col>
</Row>

<Row Class="mb-2">
    <Col Class="col-12">
        <Row Class="">
            <Col Class="me-4">
                <Checkbox @bind-Checked="@IsKitten">
                @($"{(IsKitten ? "Kitten" : "Volwassen poes")}")
            </Checkbox>
            </Col>
        
            <Col Class="me-2">
                @if (IsKitten)
                {
                    <p>Weken oud:</p>
                }
                else
                {
                    <p>Jaren oud:</p>
                }
            </Col>
            <Col>
                <AntDesign.InputNumber 
                    Min="1"
                    Disabled="@ValidCatchLocation" 
                    DefaultValue="1" 
                    Size="@InputSize.Small" 
                    @bind-Value="@EstimatedWeeksOld"/>
            </Col>
        </Row>
    </Col>
</Row>

<Row Class="mb-2">
    <Col Class="col-12">
        Voer:
        <Checkbox @bind-Checked="@WetFoodAllowed">
            @($"{(WetFoodAllowed ? "Nat voer" : "Geen nat voer")}")
        </Checkbox>
    </Col>
</Row>

<Row Class="mb-2">
    <Col Class="col-12">
        <Input Placeholder="Kleur kat"  Size="@InputSize.Large" @bind-Value="@CatColor" />
    </Col>
</Row>

<Row Class="mb-2">
    <Col Class="col-12">
        <RadioGroup @bind-Value="@CatArea" ButtonStyle="@RadioButtonStyle.Solid">
            <Radio RadioButton Value="@Contract.Entities.CatArea.Quarantine">Quarantaine</Radio>
            <Radio RadioButton Value="@(Contract.Entities.CatArea.Infirmary)">Ziekenboeg</Radio>
            <Radio RadioButton Value="@(Contract.Entities.CatArea.Room2)">Kamer 2</Radio>
            <Radio RadioButton Value="@(Contract.Entities.CatArea.SmallEnclosure)">KLeine ren</Radio>
            <Radio RadioButton Value="@(Contract.Entities.CatArea.BigEnclosure)">Grote ren</Radio>
        </RadioGroup>
    </Col>
</Row>


<Row Class="mb-2">
    <Col Class="col-12">
        <RadioGroup @bind-Value="@Gender" ButtonStyle="@RadioButtonStyle.Solid">
            <Radio RadioButton Value="@(Contract.Entities.Gender.Unknown)">Onbekend</Radio>
            <Radio RadioButton Value="@(Contract.Entities.Gender.Molly)">Poes</Radio>
            <Radio RadioButton Value="@(Contract.Entities.Gender.Tomcat)">Kater</Radio>
        </RadioGroup>
    </Col>
</Row>

<Row Class="mb-2">
    <Col Class="col-12">
        <RadioGroup @bind-Value="@FoodType" ButtonStyle="@RadioButtonStyle.Solid">
            <Radio RadioButton Value="@(Contract.Entities.FoodType.FirstPhase)">Eerste Fase</Radio>
            <Radio RadioButton Value="@(Contract.Entities.FoodType.SecondPhase)">Tweede Fase</Radio>
            <Radio RadioButton Value="@(Contract.Entities.FoodType.Rc365)">RC 365</Radio>
        </RadioGroup>
    </Col>
</Row>

<Row Class="mb-2">
    <Col Class="col-12">
        <RadioGroup @bind-Value="@LitterType" ButtonStyle="@RadioButtonStyle.Solid">
            <Radio RadioButton Value="@(Contract.Entities.LitterGranuleType.Normal)">Normaal</Radio>
            <Radio RadioButton Value="@(Contract.Entities.LitterGranuleType.Clumping)">Klontvormend</Radio>
            <Radio RadioButton Value="@(Contract.Entities.LitterGranuleType.Wood)">Hout korrels</Radio>
        </RadioGroup>
    </Col>
</Row>