@page "/superkatten"

@using Superkatten.Katministratie.Application.Contracts
@using Superkatten.Katministratie.Web.Services

<AntList DataSource="@Superkatten" TItem="Superkat">
    <ListItem OnClick="()=>ItemClick(context.Number)">
        <SuperkatInfo Context=@context />
    </ListItem>
</AntList>

@code {
    [Inject]
    public ISuperkattenListService superkattenService 
    { 
        get; 
        set; 
    }

    public List<Superkat> Superkatten { get; set; } = new List<Superkat>();

    protected override async Task OnInitializedAsync() 
    {
        var superkatten = await superkattenService.GetAllSuperkattenAsync();
        Superkatten = superkatten
            .AsQueryable()
            .OrderBy(s => s.Name)
            .ToList();
    }

    public void ItemClick(int superkatNumber)
    {
        
    }
}
