@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace Superkatten.Katministratie.Api.Client.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@* This is the fallback page when things go wrong*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="Superkatten.Katministratie.Api.Client.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">

        <environment include="Staging,Production">
            Een fout is opgetreden, start de applicatie opnieuw op.
        </environment>

        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>

        <a href="" class="reload">Ververs de pagina</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
